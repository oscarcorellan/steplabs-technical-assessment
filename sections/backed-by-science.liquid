<section class="science-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="science-container" style="max-width: {{ section.settings.max_width }}px; margin-inline: auto;">

    <!-- Left Image -->
    <div class="science-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading | escape }}">
      {% endif %}
    </div>

    <!-- Right Content -->
    <div class="science-content">
      {% if section.settings.heading != blank %}
        <h2 class="science-heading">{{ section.settings.heading }}</h2>
    {% endif %}

      <!-- BUILD LASTING STRENGTH -->
      {% assign strength_blocks = section.blocks | where: 'type', 'strength_block' %}
      {% if strength_blocks.size > 0 %}
        <div class="science-group">
          <h3 class="science-group-title">{{ section.settings.strength_heading }}</h3>
          <div class="science-divider"></div>
          <div class="science-blocks">
            {% for block in strength_blocks %}
              <div class="science-block">
                {% if block.settings.label != blank %}
                  <p class="science-label">{{ block.settings.label }}</p>
                {% endif %}
                {% if block.settings.value != blank %}
                  <h4 class="science-value">{{ block.settings.value }}</h4>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="science-description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
    {% endif %}

      <!-- CLINICALLY SHOWN -->
      {% assign clinical_blocks = section.blocks | where: 'type', 'clinical_block' %}
      {% if clinical_blocks.size > 0 %}
        <div class="science-group">
          <h3 class="science-group-title">{{ section.settings.clinical_heading }}</h3>
          <div class="science-divider"></div>
          <div class="science-blocks">
            {% for block in clinical_blocks %}
              <div class="science-block">
                {% if block.settings.label != blank %}
                  <p class="science-label">{{ block.settings.label }}</p>
                {% endif %}
                {% if block.settings.value != blank %}
                  <h4 class="science-value">{{ block.settings.value }}</h4>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="science-description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      <!-- CTA BUTTON -->
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="science-button">{{ section.settings.button_text }}<span>
            <svg
              width="14"
              height="14"
              viewBox="0 0 14 14"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <g clip-path="url(#clip0_7_138)">
                <path
                  d="M2.5 11.5011L11.2421 2.75789M3.46394 2.05078H11.9492V10.5361"
                  stroke="#262D33"
                  stroke-width="1.4"
                  stroke-linecap="square" />
              </g>
              <defs>
                <clipPath id="clip0_7_138">
                  <rect
                    width="14"
                    height="14"
                    fill="white" />
                </clipPath>
              </defs>
            </svg>
          </span>
        </a>
      {% endif %}

      <!-- QUOTE / REFERENCES -->
      {% if section.settings.quote != blank %}
        <div class="science-quote">{{ section.settings.quote }}</div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Backed by Science",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "max_width",
        "label": "Max container width (px)",
        "min": 1440,
        "max": 1920,
        "step": 10,
        "unit": "px",
        "default": 1440
      },
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Backed by Science.<br><em>Proven by Results.</em></p>"
      },
      {
        "type": "text",
        "id": "strength_heading",
        "label": "Build Lasting Strength Heading",
        "default": "Build Lasting Strength in Just 3 Short Sessions a Week"
      }, {
        "type": "text",
        "id": "clinical_heading",
        "label": "Clinically Shown Heading",
        "default": "Clinically Shown to Speed Up Recovery"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Section Image"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "See The Science →"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "richtext",
        "id": "quote",
        "label": "Quote / References",
        "default": "<p>¹Yasuda et al., 2010 ²Loenneke et al., 2012 ³Takarada et al., 2000 ⁴Hughes et al., 2017</p>"
      }
    ],
    "blocks": [
      {
        "type": "strength_block",
        "name": "Strength Block",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Label (small text)",
            "default": "In a clinical study¹"
          }, {
            "type": "text",
            "id": "value",
            "label": "Value (large number)",
            "default": "2.0x"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "muscle strength increase vs traditional low-load training"
          }
        ]
      }, {
        "type": "clinical_block",
        "name": "Clinical Block",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Label (small text)",
            "default": "In a recovery study³"
          }, {
            "type": "text",
            "id": "value",
            "label": "Value (large number)",
            "default": "78%"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "faster muscle recovery time post-exercise with Targeted Compression/BFR compared to passive rest"
          }
        ]
      }
    ],
    "max_blocks": 8,
    "presets": [
      {
        "name": "Backed by Science",
        "category": "Content"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .science-section {
    padding: 2.5rem 0;
  }

  .science-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }

  .science-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .science-content {
    display: flex;
    flex-direction: column;
  }

  .science-heading {
    font-size: 2.5rem;
    font-weight: 500;
    line-height: 1.2;
    color: #232223;
  }

  .science-heading em {
    font-style: italic;
  }

  .science-group {
    margin-top: 2.5rem;
  }

  .science-group-title {
    font-size: 1.125rem;
    font-weight: 400;
    line-height: 1.238rem;
    letter-spacing: -0.056rem;
    text-transform: uppercase;
    color: #262D33;
  }

  .science-divider {
    width: 100%;
    height: 1px;
    background-color: #262D33;
    margin: 0.688rem 0 0.625rem;
  }

  .science-blocks {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .science-block {
    text-align: left;
  }

  .science-label {
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.225rem;
    letter-spacing: -0.044rem;
    color: #262D33;
  }

  .science-value {
    font-size: 4.375rem;
    font-weight: 400;
    line-height: 4.813rem;
    letter-spacing: 0.044rem;
    color: #262D33;
  }

  .science-description {
    font-size: 1.006rem;
    font-weight: 700;
    line-height: 1.409rem;
    letter-spacing: 0;
    padding-top: 0.579rem;
    color: #262D33;
  }

  .science-button {
    display: flex;
    margin-top: 3.125rem;
    gap: 0.5rem;
    align-items: center;
    padding: 0.625rem 1.688rem;
    background: transparent;
    border: 1px solid #262D33;
    border-radius: 50px;
    color: #262D33;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    line-height: 1.375rem;
    font-weight: 500;
    letter-spacing: -0.03rem;
    width: fit-content;
  }

  .science-quote {
    margin-top: 0.574rem;
    font-size: 0.688rem;
    color: #262D33;
    line-height: 0.963rem;
  }

  @media (max-width: 900px) {
    .science-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .science-content {
      align-items: center;
    }

    .science-blocks {
      grid-template-columns: 1fr 1fr;
    }

    .science-block {
      text-align: center;
    }

    .science-button {
      margin-inline: auto;
    }
  }

  @media (max-width: 600px) {
    .science-blocks {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}