        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="hero-subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      <div class="hero-buttons">
        {% if section.settings.primary_button_text != blank %}
          <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if section.settings.secondary_button_text != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.guarantee_text != blank %}
        <div class="hero-guarantee">
          {% if section.settings.guarantee_icon != blank %}
            <img src="{{ section.settings.guarantee_icon | img_url: '50x' }}" alt="Guarantee icon">
          {% endif %}
          <span>{{ section.settings.guarantee_text }}</span>
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="hero-icons">
          {% for block in section.blocks %}
            <div class="hero-icon">
              {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | img_url: '100x' }}" alt="{{ block.settings.text | escape }}">
              {% endif %}
              {% if block.settings.text != blank %}
                <p>{{ block.settings.text }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="hero-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading | escape }}">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero Section",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "max_width",
        "label": "Max container width (px)",
        "min": 1440,
        "max": 1920,
        "step": 10,
        "unit": "px",
        "default": 1440
