        "label": "Review Text",
        "default": "Trusted by 1,000+ happy customers"
      },
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Wake Up The <em>Muscles</em> That Matter.</p>"
      }, {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Suji delivers science-backed targeted compression â€” pain relief, muscle activation, and lasting strength in minutes, right from home."
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Hero Image"
      }, {
        "type": "text",
        "id": "primary_button_text",
        "label": "Primary Button Text",
        "default": "Try Suji"
      }, {
        "type": "url",
        "id": "primary_button_link",
        "label": "Primary Button Link"
      }, {
        "type": "text",
