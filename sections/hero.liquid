        "label": "Secondary Button Text",
        "default": "How It Works"
      }, {
        "type": "url",
        "id": "secondary_button_link",
        "label": "Secondary Button Link"
      }, {
        "type": "image_picker",
        "id": "guarantee_icon",
        "label": "Guarantee Icon"
      }, {
        "type": "text",
        "id": "guarantee_text",
        "label": "Guarantee Text",
        "default": "30-day money back guarantee"
      }
    ],
    "blocks": [
      {
        "type": "icon_item",
        "name": "Feature Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }, {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Feature text"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Hero Section",
        "category": "Hero"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .hero-banner {
    width: 100%;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    padding-left: 4rem;
  }

  .hero-review {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .hero-review span {
    font-size: 14px;
    font-weight: 400;
    line-height: 1.5;
  }

  .hero-stars svg {
    color: #e60023;
  }

  .hero-heading {
    font-size: 3rem;
    font-weight: 500;
    line-height: 1.2;
  }

  .hero-subheading {
    font-size: 1rem;
    color: #717171;
    max-width: 70.05%;
    line-height: 1.5;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.563rem 1.625rem;
    border-radius: 50px;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.25rem;
    letter-spacing: -0.03rem;
  }

  .btn-primary {
    background-color: #E10017;
    color: #FFFFFF;
  }

  .btn-secondary {
    border: 0.063rem solid #E10017;
    color: #E10017;
  }

  .hero-guarantee {
    display: flex;
    align-items: center;
    margin-top: 0.5rem;
    gap: 0.5rem;
    color: #222;
  }

  .hero-guarantee span {
    font-size: 12px;
    font-weight: 500;
  }

  .hero-guarantee img {
    width: 16px;
    height: 16px;
  }

  .hero-icons {
    display: flex;
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .hero-icon {
    display: flex;
    align-items: center;
    width: 33.333333%;
    gap: 0.5rem;
  }

  .hero-icon p {
    font-size: 14px;
    font-weight: 400;
    line-height: 1.5;
  }

  .hero-icon img {
    width: 40px;
    height: 40px;
  }

  .hero-image img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 900px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .hero-buttons {
      justify-content: center;
    }
    .hero-icons {
      justify-content: center;
    }
    .hero-content {
      padding-left: 0;
    }
  }
{% endstylesheet %}